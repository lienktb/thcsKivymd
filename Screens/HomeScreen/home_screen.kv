<CustomOneLineIconListItem>
    IconLeftWidget:
        icon: root.icon
<HomeScreen>:
    md_bg_color: utils.get_color_from_hex('#EAF5F9')
    MDBoxLayout:
        id: image_bg_box
        size_hint_y: .4
        pos_hint: {"top": 1}
        padding: 20
        MDCard:
            radius: [20,]
            md_bg_color: utils.get_color_from_hex('#79CAE8')
            MDBoxLayout:
                padding: 10
                orientation: 'vertical'
                spacing: 10
                size_hint: (.5, .3)
                pos_hint: {'center_y': .5}
                Label:
                    text: "WELCOM"
                Label:
                    text: "MY APP"
            Image:
                id: image
                source: "assets/images/bg1.png"
                size_hint: None, None
                size: self.parent.width, self.parent.height
                size_hint: .9, 1
                keep_ratio: True
                pos_hint: {"x": .3}
    MDBoxLayout:
        padding: 20
        size_hint: 1, 0.65
        size: self.width, self.height
        pos_hint: {'center_x': 0.5}

        orientation: 'vertical'
        MDCard:
            padding: 20
            orientation: 'vertical'
            MDLabel:
                text: "Mã hóa"
            ScrollView:
                do_scroll_x: False
                MDLabel:
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]
                    text: "This is the first item's accordion body. It is shown by default, until the collapse plugin adds the appropriate classes that we use to style each element. These classes control the overall appearance, as well as the showing and hiding via CSS transitions. You can modify any of this with custom CSS or overriding our default variables. It's also worth noting that just about any HTML can go within, though the transition does limit overflow."
        MDCard:
            md_bg_color: utils.get_color_from_hex('#EAF5F9')
