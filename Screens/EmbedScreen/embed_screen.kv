#:import utils kivy.utils
<EmbedScreen>:
    md_bg_color: utils.get_color_from_hex('#EAF5F9')
    MDRelativeLayout:
        id: image_bg_box
        size_hint_y: .4
        pos_hint: {"top": 1}
        Image:
            id: image
            source: "assets/images/bg.jpg"
            size_hint: None, None
            size: self.parent.width, self.parent.height
            allow_stretch: True
            keep_ratio: True
    MDBoxLayout:
        padding: 20
        MDRelativeLayout:
            spacing: 10
            size_hint: 1, 0.5
            pos_hint: {'center_x': 0.5}
            Label:
                pos_hint: {'y':.95, 'x':0}
                text: "Nhúng"
                color: utils.get_color_from_hex('#116294')
                size_hint: None, None
            MDBoxLayout:
                orientation:'horizontal'
                radius: [25, ]
                pos_hint: {'y':.9, 'x':0.05}
                size_hint:(.95, .15)
                MDTextFieldRound:
                    id: link_file
                    hint_text: "Nhập đường dẫn file"
                    font_size:"14dp"
                    size_hint:(.7, 1)
                    pos_hint: {'center_y': .5}
                    normal_color: utils.get_color_from_hex('#ffffff')
                    color_active: utils.get_color_from_hex('#ffffff')
                MDRaisedButton:
                    text: "Chọn"
                    pos_hint: {'center_y': .5}
                    on_release: root.file_manager_open()
            MDTextFieldRound:
                id: message
                pos_hint: {'y':.65, 'x':0.05}
                hint_text: "Nhập thông điệp"
                size_hint:(.9, .15)
                normal_color: utils.get_color_from_hex('#ffffff')
                color_active: utils.get_color_from_hex('#ffffff')
            Label:
                pos_hint: {'y':.3, 'x':0}
                text: "Thực hiện"
                color: utils.get_color_from_hex('#116294')
                size_hint: None, None
            MDGridLayout:
                cols: 3
                size_hint: (1, .4)
                pos_hint: {'y':0, 'x':0}
                spacing: 5
                MDCard:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.44}
                    orientation: 'vertical'
                    padding: '15dp'
                    spacing: '15px'
                    radius: [16, ]
                    on_release: root.embedwtm()
                    MDIcon:
                        icon: "code-tags"
                        halign: 'center'
                    MDLabel:
                        halign: 'center'
                        text: "Water mark"
                MDCard:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.44}
                    orientation: 'vertical'
                    padding: '15dp'
                    spacing: '15px'
                    radius: [16, ]
                    on_release: root.embedLsb()
                    MDIcon:
                        icon: "cog"
                        halign: 'center'
                    MDLabel:
                        halign: 'center'
                        text: "Nhúng LSB"
                MDCard:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.44}
                    orientation: 'vertical'
                    padding: '15dp'
                    radius: [16, ]
                    spacing: '15px'
                    on_release: root.decryptLsb()
                    MDIcon:
                        icon: "content-save"
                        halign: 'center'
                    MDLabel:
                        text: "Giải mã"
                        halign: 'center'
